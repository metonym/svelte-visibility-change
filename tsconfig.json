{
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["svelte", "vitest/globals"],
    "paths": {
      "svelte-visibility-change": ["./src"],
      "svelte-visibility-change/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"]
}
