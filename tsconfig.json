{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "types": ["svelte", "vitest/globals"],
    "paths": {
      "svelte-visibility-change": ["./src"],
      "svelte-visibility-change/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"]
}