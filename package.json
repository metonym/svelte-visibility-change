{
  "name": "svelte-visibility-change",
  "version": "0.7.0",
  "license": "MIT",
  "description": "Detect browser page visibility changes using the Page Visibility API",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    "./src/*.svelte": {
      "types": "./src/*.svelte.d.ts",
      "import": "./src/*.svelte"
    },
    "./src/*.js": {
      "types": "./src/*.d.ts",
      "import": "./src/*.js"
    },
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "svelte": "./src/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^22.18.1",
    "github-markdown-css": "^5.8.1",
    "jsdom": "^26.1.0",
    "marked": "^16.2.1",
    "marked-base-url": "^1.1.7",
    "marked-highlight": "^2.2.2",
    "shiki": "^3.12.2",
    "svelte": "^5.38.8",
    "typescript": "^5.9.2",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metonym/svelte-visibility-change.git"
  },
  "homepage": "https://metonym.github.io/svelte-visibility-change/",
  "bugs": "https://github.com/metonym/svelte-visibility-change/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "page visibility",
    "browser tab",
    "focus",
    "blur",
    "api"
  ],
  "files": [
    "src"
  ],
  "type": "module"
}
