{
  "name": "svelte-visibility-change",
  "version": "0.6.0",
  "license": "MIT",
  "description": "Detect browser page visibility changes using the Page Visibility API",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    "./src/*.svelte": {
      "types": "./src/*.svelte.d.ts",
      "import": "./src/*.svelte"
    },
    "./src/*.js": {
      "types": "./src/*.d.ts",
      "import": "./src/*.js"
    },
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "svelte": "./src/index.js"
    }
  },
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c",
    "test": "vitest"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/svelte": "^5.2.7",
    "jsdom": "^26.0.0",
    "svelte": "^5.25.2",
    "svelte-readme": "^3.6.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metonym/svelte-visibility-change.git"
  },
  "homepage": "https://metonym.github.io/svelte-visibility-change/",
  "bugs": "https://github.com/metonym/svelte-visibility-change/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "page visibility",
    "browser tab",
    "focus",
    "blur",
    "api"
  ],
  "files": [
    "src"
  ],
  "type": "module"
}
